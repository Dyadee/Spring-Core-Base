<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- define the dependency -->
	<bean id="myFortuneService" class="com.barehacks.springcore.HappyFortuneService">
	</bean>
	
	<bean id="myCoach" class="com.barehacks.springcore.TrackCoach" >
		<constructor-arg ref="myFortuneService"/>
	</bean>
	
	<bean id="myCricketCoach" class="com.barehacks.springcore.CricketCoach" >
		<property name="fortuneService" ref="myFortuneService"/>
		
		<!-- inject literal values -->
		<property name="emailAddress" value="thebestcoach@barehacks.com"/>
		<property name="team" value="Xavier Augustine Team" />
	</bean>

	


</beans>
